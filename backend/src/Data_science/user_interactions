const mongoose = require('mongoose');

const userInteractionSchema = new mongoose.Schema({
  interactionId: { type: String, required: true, unique: true }, // Unique identifier
  userId: { type: String, required: true }, // Associated user ID
  courseId: { type: String, required: true }, // Associated course ID
  score: { type: Number, required: true }, // Score achieved
  timeSpentMinutes: { type: Number, required: true }, // Time spent on the module
  lastAccessed: { type: Date, default: Date.now }, // Last accessed timestamp
});

module.exports = mongoose.model('UserInteraction', userInteractionSchema);
